/* pages/classInfo/classInfo.wxss */

.info_box {
  padding: 10rpx;
}

.title {
  border-bottom: 1px solid #eee;
}

.desc {
  padding: 20rpx 0;
}

image {
  width: 100%;
}

.btn_box {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-top: 1px solid #eee;
  /* background: rgb(182, 235, 226); */
}

.btn_box view, .btn_box button {
  flex: 1;
  line-height: 100rpx;
}

.btn_box view navigator {
  font-size: 80rpx;
  background: #eee;
  border-radius: 30rpx;
}

.btn_box view {
  position: relative;
}

.btn_box view text {
  position: absolute;
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  background: rgb(247, 131, 131);
  color:#fff;
  top: -0rpx;
  left: 63%;
  transform: translateX(-50%);
}
